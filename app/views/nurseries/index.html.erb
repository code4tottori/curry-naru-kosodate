<p id="notice"><%= notice %></p>

<h1>Nurseries</h1>

<table>
  <thead>
    <tr>
      <%- %w(name address phone business_hours capacity).each do |attr| -%>
      <th><%= Nursery.human_attribute_name attr %></th>
      <%- end -%>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @nurseries.each do |nurseries| %>
      <tr>
        <td><%= nurseries.name %></td>
        <td><%= nurseries.address %></td>
        <td><%= nurseries.phone %></td>
        <td><%= nurseries.business_hours %></td>
        <td><%= nurseries.capacity %></td>
        <td><%= link_to t('.show'), nurseries %></td>
     </tr>
    <% end %>
  </tbody>
</table>

<br>
